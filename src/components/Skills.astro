---
import resume from '../components/Resume_Data_Helper';
const { skills } = resume;
---

<div class="section section__skills">
    <h1 class="no-margin skills_titulo">Habilidades</h1> 
    <div class="skills__leyendas">
        <div class="leyenda basic">
            <span>Basic</span>
        </div>
        <div class="leyenda intermediate">
            <span>Intermediate</span>
        </div>
        <div class="leyenda expert">
            <span>Expert</span>
        </div>
    </div>
    <div class="skills">
      {skills.map(
        (item, index)=>(
        <div class={`skill ${item.level.toLowerCase()}`}>
                <span>{item.name}</span>
        </div>
      ))}
    </div>
</div>

<style>
    .leyenda{
        width: 4rem;
        max-width: 5.5rem;
        text-align: center;
        border-radius: 0.5rem;
        text-transform: uppercase;
        font-weight: bold;
        color: white;
        font-size: 0.5rem;
    }
    .skills__leyendas{
        grid-area: leyenda;
        display: flex;
        gap: 0.3rem;
        align-items: center;
        justify-content: end;
    }
    .section__skills{
        display: grid;
        grid-template-areas: "titulo leyenda"
                            "skills skills";
    }
   .skills_titulo{
       grid-area: titulo;
       align-self: center;
   }
   .skills{
       padding: 0 0.6rem;
       grid-area: skills;
       display: flex;
       gap: 0.5rem;
       flex-wrap: wrap;
   }
   .skill{
        text-wrap: pretty;
        text-transform: capitalize;
        padding: 0 0.6rem;
        font-size: 0.85rem;
        text-align: center;
        color: white;
        border-radius: 0.5rem;
        font-weight: bold;
        display: flex;
        align-items: center;
   }
   .basic{
        background-color: color-mix(in srgb, var(--primario) 30%, white);
    }
    .intermediate{
        background-color: color-mix(in srgb, var(--primario) 60%, white);
    }
    .expert{
        background-color: color-mix(in srgb, var(--primario) 90%, white);
    }
    .soft{
        background-color: color-mix(in srgb, var(--primario) 10%, white);
        color: black;
        border: 0.1rem solid var(--primario);
    }
    @media (min-width: 768px) {
        .leyenda{
            width: 6rem;
            font-size: 0.7rem;
            color: white;
        }
        .skills__leyendas{
            flex-flow: row nowrap;
            justify-content: end;
        }
    }
</style>